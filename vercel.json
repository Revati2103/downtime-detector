{
    "version": 2,
    "builds": [
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/next.config.js",
        "use": "@vercel/next"
      }
    ],
    "routes": [
      {
        "src": "/api/.*",
        "dest": "server/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/client/_next/$1"
      }
    ],
    "env": {
      "MONGODB_URI": "@MONGO_URI"
    }
  }
  